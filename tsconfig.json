{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node", // Ensure lowercase "node"
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "noEmit": true // No JS output needed as Bun handles execution
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "un_Used_Code"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
