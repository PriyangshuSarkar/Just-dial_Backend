generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  name         String
  email        String    @unique
  isVerified   Boolean   @default(false)
  phone        String?
  password     String
  otp          String?
  otpExpiresAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?
  salt         String
  address      Address?  @relation("UserAddress") // Relation defined here without fields/references
  addressId    String?   @unique // Ensure one-to-one relationship
  avatar       String?
}

model Business {
  id            String    @id @default(uuid())
  otp           String?
  otpExpiresAt  DateTime?
  website       String?
  rating        Float?    @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?
  password      String
  salt          String
  isVerified    Boolean   @default(false)
  email         String    @unique
  name          String
  phone         String?
  type          String?
  address       Address?  @relation("BusinessAddress") // Relation defined here without fields/references
  addressId     String?   @unique // Ensure one-to-one relationship
  companyLogo   String?
  companyImages String[]
}

model Admin {
  id           String    @id @default(uuid())
  name         String
  email        String    @unique
  password     String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?
}

model Address {
  id         String   @id @default(uuid())
  street     String?
  city       String?
  state      String?
  pincode    String?
  user       User?    @relation("UserAddress", fields: [userId], references: [id])
  userId     String?  @unique // Ensure one-to-one relationship
  business   Business? @relation("BusinessAddress", fields: [businessId], references: [id])
  businessId String?  @unique // Ensure one-to-one relationship
}
