generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  name         String
  email        String    @unique
  isVerified   Boolean   @default(false)
  phone        String?
  password     String
  otp          String?
  otpExpiresAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?
  salt         String
  address      Address[] @relation("UserAddresses")
  avatar       String?
}

model Business {
  id           String    @id @default(uuid())
  otp          String?
  otpExpiresAt DateTime?
  website      String?
  rating       Float?    @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?
  password     String
  salt         String
  isVerified   Boolean   @default(false)
  email        String    @unique
  name         String
  phone        String?
  type         String?
  address      Address[] @relation("BusinessAddresses")
  companyLogo  String?
  companyImages String[]
}

model Admin {
  id           String    @id @default(uuid())
  name         String
  email        String    @unique
  password     String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?
}

model Address {
  id         String    @id @default(uuid())
  street     String?
  city       String?
  state      String?
  pincode    String?
  userId     String?
  businessId String?
  business   Business? @relation("BusinessAddresses", fields: [businessId], references: [id])
  user       User?     @relation("UserAddresses", fields: [userId], references: [id])
}
