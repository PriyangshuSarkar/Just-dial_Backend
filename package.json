{
  "name": "backend",
  "module": "src/app.ts",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"bun run --watch src/app.ts\" \"bun run watch:build\" || concurrently \"npm run --watch src/app.ts\" \"node run watch:build\"",
    "watch:build": "tsc --watch",
    "build": "bun build || npm run build:default",
    "build:default": "tsc",
    "start": "bun dist/app.js || node dist/app.js"
  },
  "prisma": {
    "seed": "bun run ./prisma/seed.ts"
  },
  "devDependencies": {
    "@apollo/server": "4.11.3",
    "@eslint/js": "9.19.0",
    "@types/bun": "latest",
    "@types/cookie-parser": "1.4.8",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jsonwebtoken": "9.0.8",
    "@types/morgan": "1.9.9",
    "@types/node": "20.17.16",
    "@types/nodemailer": "6.4.17",
    "@types/uuid": "10.0.0",
    "eslint": "9.19.0",
    "eslint-plugin-react": "7.37.4",
    "globals": "15.14.0",
    "prisma": "6.3.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.22.0"
  },
  "peerDependencies": {
    "typescript": "5.7.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.738.0",
    "@prisma/client": "6.3.0",
    "@types/mime-types": "2.1.4",
    "concurrently": "9.1.2",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "express": "4.21.2",
    "graphql": "16.10.0",
    "graphql-tag": "2.12.6",
    "graphql-upload-ts": "2.1.2",
    "jsonwebtoken": "9.0.2",
    "mime-types": "2.1.35",
    "morgan": "1.10.0",
    "nodemailer": "6.10.0",
    "razorpay": "2.9.5",
    "slugify": "1.6.6",
    "uuid": "10.0.0",
    "zod": "3.24.1"
  }
}
